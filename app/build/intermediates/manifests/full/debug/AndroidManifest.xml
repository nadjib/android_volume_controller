<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.nadjib_khelifati.appcontrolevolume"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:allowBackup="true"
        android:description="@string/app_description"
        android:icon="@drawable/ic_volume"
        android:label="@string/app_name"
        android:logo="@drawable/ic_volume"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
        <activity
            android:name="org.nadjib_khelifati.appcontrolevolume.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="org.nadjib_khelifati.appcontrolevolume.ControlVolumeService" />

        <receiver android:name="org.nadjib_khelifati.appcontrolevolume.AutoStartBroadcast" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>